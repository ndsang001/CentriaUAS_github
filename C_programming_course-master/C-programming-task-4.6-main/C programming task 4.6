#include <stdio.h>
#include <string.h>

#define number_of_string 3
#define max_size 20

int main() {
    int rows = 3, columns = 3, i, j;
    
    char a[] = "Country";
    char b[] = "Population";
    char c[] = "Area";
    char d[] = "Density"; 

    char name[number_of_string][max_size] =
      {"Viet Nam",
      "Lao",
      "Thai Lan",
    };

    int r[3][3] = {
      {95540000, 331212, },
      {7062000, 237955, },
      {69430000, 513120, }
    };
   
     for(i = 0; i < rows; ++i){
        r[i][2] = r[i][0] / r[i][1];
      }

    printf("This program will print the table indicating the population, area and density of 3 countries Viet Nam, Laos and Thailand 2019\n\n");
    

    printf("%s    ",a);
    printf("%s    ",b);
    printf("%s    ",c);
    printf("%s.   \n",d);
    
    printf("%s   ", name[0]);

    for(i = 0; i < 1; i++){
      for(j = 0; j < columns; ++j){
        printf("%d    ", r[i][j]);
        if(j == columns -1){
          printf("\n\n");
        }
      }
    }


    printf("%s        ", name[1]);
    
    for(i = 1; i < 2; i++){
      for(j = 0; j < columns; ++j){
        printf("%d     ", r[i][j]);
        if(j == columns -1){
          printf("\n\n");
        }
      }
    }

    printf("%s   ", name[2]);
    
    for(i = 2; i < 3; i++){
      for(j = 0; j < columns; ++j){
        printf("%d    ", r[i][j]);
        if(j == columns -1){
          printf("\n\n");
        }
      }
    }

   
    return 0;
}
